{
  "name": "x-git-agecrypt.playground",
  "version": "0.2512.1-b",
  "private": false,
  "#useful": {
    "install bun on macos": "eget --asset ^profile oven-sh/bun",
    "install bun on debian": "eget --asset ^baseline --asset ^musl --asset ^profile oven-sh/bun",
    "bob's identity": "age1xgrjk6eyckfkj85zac7jzhwusagj0vh77y64pk0tpczs5qgjmvdswgmjyq",
    "bob's pwd": "pEacE-26"
  },
  "#readme": [
    "If security (macos) or secret-tool (linux) do not handle the passphrase, prepend ops relaying on decryption with AGE_PASSPHRASE=[see the pwd above].",
    "Like if you use smerge, run 'AGE_PASSPHRASE=$(secret-tool lookup application age identity-file ./bobs.identity) smerge ...'"

  ],
  "scripts": {
    "status": "git-agecrypt status",
    "init": "git-agecrypt init",
    "add-identity": "git-agecrypt config add -i ./bobs.identity",
    "add-bobs-file": "git-agecrypt config add -r age1xgrjk6eyckfkj85zac7jzhwusagj0vh77y64pk0tpczs5qgjmvdswgmjyq -p protected/secrets2bobs.md",
    "test-bobs-file": "git-agecrypt textconv protected/secrets2bobs.md",
    "add-all-files": "git-agecrypt config add -r age1xgrjk6eyckfkj85zac7jzhwusagj0vh77y64pk0tpczs5qgjmvdswgmjyq -p protected/* -p plain/*",
    "status:recipients": "git-agecrypt config list --recipient",
    "age:create-identity": "age-keygen | age -p -a > ./bob2s.identity && chmod 600 ./bob2s.identity",
    "get-key:linux": "secret-tool lookup application age identity-file ./bobs.identity",
    "add-key:macos": "security add-generic-password -a \"$(whoami)\" -s \"age-passphrase-my-2607\" -l \"my#2607 Age Identity Passphrase\" -w",
    "add-key:linux": "secret-tool store --label=\"my#2607 Age Identity Passphrase\" application age identity-file ./bobs.identity",
    "export:linux": "export AGE_PASSPHRASE=$(secret-tool lookup application age identity-file ~/identities.age)",
    "remove-key:linux": "secret-tool clear --label=\"my#2607 Age Identity Passphrase\"",
    "list-keys:linux": "secret-tool search application age"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@clack/prompts": "latest",
    "@types/bun": "latest"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=24",
    "bun": "^1.3",
    "pnpm": "please-use-bun",
    "npm": "please-use-bun",
    "yarn": "please-use-bun"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "bun",
      "onFail": "warn"
    }
  },
  "workspaces": [
  ]
}
